<%- include('../partials/admin-header') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
<link href="/css/toast.css" rel="stylesheet">
<script src="/js/toast.js" defer></script>

<!-- Toast Container -->
<div id="toast-container"></div>

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-900">Email Templates</h1>
        <button onclick="openCreateModal()" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
            <i class="fas fa-plus mr-2"></i>Create New Template
        </button>
    </div>

    <!-- Templates List -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Subject</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200" id="templatesTableBody">
                <% if (templates && templates.length > 0) { %>
                    <% templates.forEach(template => { %>
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900"><%= template.name %></div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="text-sm text-gray-900"><%= template.subject %></div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="text-sm text-gray-500"><%= template.description || '-' %></div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-500">
                                    <%= new Date(template.created_at).toLocaleDateString() %>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-left text-sm font-medium">
                                <button onclick="openEditModal('<%= template.id %>')" 
                                    class="text-blue-600 hover:text-blue-900 mr-4">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button onclick="showDeleteConfirmation('<%= template.id %>', '<%= template.name %>')"
                                    class="text-red-600 hover:text-red-900">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="5" class="px-6 py-4 text-center text-gray-500">
                            No templates found. Create your first template to get started.
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<!-- Create/Edit Modal -->
<div id="templateModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden overflow-y-auto h-full w-full z-50" onclick="if(event.target === this) closeTemplateModal()">
    <div class="relative top-10 mx-auto p-6 border w-full max-w-5xl shadow-xl rounded-lg bg-white my-8 max-h-[90vh] overflow-y-auto" onclick="event.stopPropagation()">
        <!-- Header -->
        <div class="flex justify-between items-start mb-6 pb-4 border-b border-gray-200">
            <div class="flex-1">
                <h3 class="text-2xl font-semibold text-gray-900 mb-2" id="modalTitle">Create New Template</h3>
                <p class="text-sm text-gray-500">Create or edit email templates with HTML support and dynamic variables</p>
            </div>
            <button onclick="closeTemplateModal()" 
                class="ml-4 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-full p-2 transition"
                aria-label="Close modal">
                <i class="fas fa-times text-xl"></i>
            </button>
        </div>
        
        <form id="templateForm" class="space-y-6">
            <input type="hidden" id="templateId">
            
            <!-- Template Name and Description (Two Column) -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label for="templateName" class="block text-sm font-semibold text-gray-700 mb-2">
                        Template Name <span class="text-red-500">*</span>
                    </label>
                    <input type="text" 
                        id="templateName" 
                        name="templateName"
                        required
                        class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition shadow-sm"
                        placeholder="e.g., Welcome Email, Booking Confirmation">
                </div>
                <div>
                    <label for="templateDescription" class="block text-sm font-semibold text-gray-700 mb-2">
                        Description
                    </label>
                    <input type="text" 
                        id="templateDescription" 
                        name="templateDescription"
                        class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition shadow-sm"
                        placeholder="Brief description of this template">
                </div>
            </div>
            
            <!-- Reply-To Field -->
            <div>
                <label for="templateReplyTo" class="block text-sm font-semibold text-gray-700 mb-2">
                    Reply-To Email Address (Optional)
                </label>
                <input type="email" id="templateReplyTo"
                    class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
                    placeholder="e.g., support@yourcompany.com">
                <p class="mt-1 text-xs text-gray-500">
                    If set, replies to this email will go to this address instead of the default sender.
                </p>
            </div>
            
            <!-- Subject -->
            <div>
                <label for="templateSubject" class="block text-sm font-semibold text-gray-700 mb-2">
                    Email Subject <span class="text-red-500">*</span>
                </label>
                <input type="text" 
                    id="templateSubject" 
                    name="templateSubject"
                    required
                    class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition shadow-sm"
                    placeholder="Email subject line (supports {{variables}})">
                <div class="mt-2 flex flex-wrap gap-2">
                    <span class="text-xs text-gray-500">Available variables:</span>
                    <button type="button" onclick="insertVariable('templateSubject', '{{user_name}}')" class="text-xs bg-blue-100 text-blue-700 px-2 py-1 rounded hover:bg-blue-200">user_name</button>
                    <button type="button" onclick="insertVariable('templateSubject', '{{user_email}}')" class="text-xs bg-blue-100 text-blue-700 px-2 py-1 rounded hover:bg-blue-200">user_email</button>
                    <button type="button" onclick="insertVariable('templateSubject', '{{coupon_code}}')" class="text-xs bg-blue-100 text-blue-700 px-2 py-1 rounded hover:bg-blue-200">coupon_code</button>
                    <button type="button" onclick="insertVariable('templateSubject', '{{upgrade_link}}')" class="text-xs bg-blue-100 text-blue-700 px-2 py-1 rounded hover:bg-blue-200">upgrade_link</button>
                </div>
            </div>
            
            <!-- Body -->
            <div>
                <label for="templateBody" class="block text-sm font-semibold text-gray-700 mb-2">
                    Email Body (HTML) <span class="text-red-500">*</span>
                </label>
                <div class="relative">
                    <textarea id="templateBody" 
                        name="templateBody"
                        required 
                        rows="18"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition font-mono text-sm leading-relaxed shadow-sm resize-y"
                        placeholder="Enter your email HTML content here...&#10;&#10;Example:&#10;&lt;p&gt;Hello {{user_name}},&lt;/p&gt;&#10;&lt;p&gt;Welcome to isked!&lt;/p&gt;"></textarea>
                    <div class="absolute top-3 right-3 flex items-center gap-2">
                        <span class="text-xs text-gray-400 bg-white/90 backdrop-blur-sm px-2 py-1 rounded border border-gray-200 shadow-sm">
                            <i class="fas fa-code mr-1"></i>HTML
                        </span>
                    </div>
                </div>
                
                <!-- Help Section -->
                <div class="mt-3 p-4 bg-gray-50 rounded-lg border border-gray-200">
                    <p class="text-xs font-semibold text-gray-700 mb-2">Available Variables (click to insert):</p>
                    <div class="flex flex-wrap gap-2">
                        <button type="button" onclick="insertVariable('templateBody', '{{user_name}}')" class="text-xs bg-blue-100 text-blue-700 px-2 py-1 rounded hover:bg-blue-200 cursor-pointer">user_name</button>
                        <button type="button" onclick="insertVariable('templateBody', '{{user_email}}')" class="text-xs bg-blue-100 text-blue-700 px-2 py-1 rounded hover:bg-blue-200 cursor-pointer">user_email</button>
                        <button type="button" onclick="insertVariable('templateBody', '{{coupon_code}}')" class="text-xs bg-blue-100 text-blue-700 px-2 py-1 rounded hover:bg-blue-200 cursor-pointer">coupon_code</button>
                        <button type="button" onclick="insertVariable('templateBody', '{{coupon_description}}')" class="text-xs bg-blue-100 text-blue-700 px-2 py-1 rounded hover:bg-blue-200 cursor-pointer">coupon_description</button>
                        <button type="button" onclick="insertVariable('templateBody', '{{upgrade_link}}')" class="text-xs bg-blue-100 text-blue-700 px-2 py-1 rounded hover:bg-blue-200 cursor-pointer">upgrade_link</button>
                    </div>
                </div>
            </div>
            
            <!-- Form Actions -->
            <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
                <button type="button" onclick="closeTemplateModal()"
                    class="px-6 py-2.5 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition font-medium">
                    Cancel
                </button>
                <button type="submit"
                    class="px-6 py-2.5 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-medium">
                    <i class="fas fa-save mr-2"></i>Save Template
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
        <div class="mt-3 text-center">
            <h3 class="text-lg font-medium text-gray-900">Delete Template</h3>
            <div class="mt-2 px-7 py-3">
                <p class="text-sm text-gray-500">
                    Are you sure you want to delete "<span id="deleteTemplateName"></span>"? This action cannot be undone.
                </p>
            </div>
            <div class="flex justify-center space-x-3 px-4 py-3">
                <button onclick="closeDeleteModal()"
                    class="px-4 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300">
                    Cancel
                </button>
                <button id="confirmDeleteButton"
                    class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700">
                    Delete
                </button>
            </div>
        </div>
    </div>
</div>

<script>
let templateToDelete = null;

function insertVariable(fieldId, variable) {
    const field = document.getElementById(fieldId);
    const start = field.selectionStart;
    const end = field.selectionEnd;
    const text = field.value;
    const before = text.substring(0, start);
    const after = text.substring(end);
    field.value = before + variable + after;
    field.focus();
    field.setSelectionRange(start + variable.length, start + variable.length);
}

function openCreateModal() {
    document.getElementById('modalTitle').textContent = 'Create New Template';
    document.getElementById('templateId').value = '';
    document.getElementById('templateName').value = '';
    document.getElementById('templateDescription').value = '';
    document.getElementById('templateSubject').value = '';
    document.getElementById('templateBody').value = '';
    document.getElementById('templateReplyTo').value = '';
    document.getElementById('templateModal').classList.remove('hidden');
}

function closeTemplateModal() {
    document.getElementById('templateModal').classList.add('hidden');
}

async function openEditModal(templateId) {
    try {
        const response = await fetch(`/admin/templates/${templateId}`);
        if (!response.ok) {
            throw new Error('Failed to fetch template');
        }
        
        const data = await response.json();
        const template = data.template;
        
        document.getElementById('modalTitle').textContent = 'Edit Template';
        document.getElementById('templateId').value = template.id;
        document.getElementById('templateName').value = template.name;
        document.getElementById('templateDescription').value = template.description || '';
        document.getElementById('templateSubject').value = template.subject;
        document.getElementById('templateBody').value = template.body;
        document.getElementById('templateReplyTo').value = template.reply_to || '';
        
        document.getElementById('templateModal').classList.remove('hidden');
    } catch (error) {
        alert('Error loading template: ' + error.message);
    }
}

function showDeleteConfirmation(templateId, templateName) {
    templateToDelete = templateId;
    document.getElementById('deleteTemplateName').textContent = templateName;
    document.getElementById('deleteModal').classList.remove('hidden');
}

function closeDeleteModal() {
    document.getElementById('deleteModal').classList.add('hidden');
    templateToDelete = null;
}

document.getElementById('templateForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = {
        name: document.getElementById('templateName').value,
        description: document.getElementById('templateDescription').value,
        subject: document.getElementById('templateSubject').value,
        body: document.getElementById('templateBody').value,
        reply_to: document.getElementById('templateReplyTo').value
    };

    const templateId = document.getElementById('templateId').value;
    const method = templateId ? 'PUT' : 'POST';
    const url = templateId ? `/admin/templates/${templateId}` : '/admin/templates';

    try {
        const response = await fetch(url, {
            method,
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(formData)
        });

        if (response.ok) {
            const data = await response.json();
            const isUpdate = document.getElementById('templateId').value !== '';
            
            if (typeof toast !== 'undefined' && toast.show) {
                toast.show({
                    type: 'success',
                    title: isUpdate ? 'Template Updated' : 'Template Created',
                    message: isUpdate 
                        ? `Template "${data.template?.name || 'template'}" has been updated successfully.`
                        : `Template "${data.template?.name || 'template'}" has been created successfully.`
                });
            }
            
            setTimeout(() => {
                window.location.reload();
            }, 1000);
        } else {
            const data = await response.json();
            if (typeof toast !== 'undefined' && toast.show) {
                toast.show({
                    type: 'error',
                    title: 'Error',
                    message: data.error || 'Failed to save template'
                });
            } else {
                alert('Error: ' + (data.error || 'Failed to save template'));
            }
        }
    } catch (error) {
        if (typeof toast !== 'undefined' && toast.show) {
            toast.show({
                type: 'error',
                title: 'Error',
                message: error.message || 'An unexpected error occurred'
            });
        } else {
            alert('Error: ' + error.message);
        }
    }
});

document.getElementById('confirmDeleteButton').addEventListener('click', async () => {
    if (!templateToDelete) return;
    
    try {
        const response = await fetch(`/admin/templates/${templateToDelete}`, {
            method: 'DELETE'
        });
        
        if (response.ok) {
            if (typeof toast !== 'undefined' && toast.show) {
                toast.show({
                    type: 'success',
                    title: 'Template Deleted',
                    message: 'Template has been deleted successfully.'
                });
            }
            closeDeleteModal();
            setTimeout(() => {
                window.location.reload();
            }, 1000);
        } else {
            const data = await response.json();
            alert('Error: ' + (data.error || 'Failed to delete template'));
        }
    } catch (error) {
        alert('Error: ' + error.message);
    }
});
</script>

<%- include('../partials/admin-footer') %>
