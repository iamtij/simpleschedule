                });
            }
        } catch (error) {

            toast.show({
                type: 'error',
                title: 'Error',
                message: 'Failed to update user'
            });
        }
    });

    document.getElementById('filterForm').addEventListener('submit', (e) => {
        e.preventDefault();
        const formData = new FormData(e.target);
        const params = new URLSearchParams(formData);
        window.location.href = `/admin/users?${params.toString()}`;
    });

    document.getElementById('confirmDeleteButton').addEventListener('click', async () => {
        if (userToDelete) {
            try {
                const response = await fetch(`/admin/users/${userToDelete}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                if (response.ok) {
                    closeDeleteModal();
                    window.location.reload();
                } else {
                    const data = await response.json();
                    throw new Error(data.error || 'Failed to delete user');
                }
            } catch (error) {

                toast.show({
                    type: 'error',
                    title: 'Error',
                    message: error.message || 'Failed to delete user'
                });
            }
        }
    });

    // Payment proof delete confirmation handler
    document.getElementById('confirmPaymentProofDeleteButton').addEventListener('click', async () => {
        if (paymentProofToDelete) {
            try {
                const response = await fetch(`/admin/payment-proofs/${paymentProofToDelete}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                const data = await response.json();
                
                if (response.ok && data.success) {
                    closePaymentProofDeleteModal();
                    
                    toast.show({
                        type: 'success',
                        title: 'Success',
                        message: 'Payment proof deleted successfully'
                    });
                    
                    // Reload payment proofs - modal stays open
                    const userId = document.getElementById('userId').value;
                    if (userId) {
                        loadPaymentProofs(userId);
                    }
                } else {
                    throw new Error(data.error || 'Failed to delete payment proof');
                }
            } catch (error) {
                console.error('Error deleting payment proof:', error);
                toast.show({
                    type: 'error',
                    title: 'Error',
                    message: error.message || 'Failed to delete payment proof'
                });
            }
        }
    });

    // Reset payment proof form fields
    function resetPaymentProofForm() {
        const planTypeSelect = document.getElementById('add-proof-plan-type');
        const fileInput = document.getElementById('add-proof-file');
        if (planTypeSelect) planTypeSelect.value = '';
        if (fileInput) fileInput.value = '';
    }
    
    // Show payment proof message
    function showPaymentProofMessage(message, type = 'error') {
        const messageDiv = document.getElementById('payment-proof-message');
        if (messageDiv) {
            messageDiv.className = `mb-3 p-3 rounded-lg text-sm ${
                type === 'error' ? 'bg-red-100 text-red-800 border border-red-200' : 
                type === 'success' ? 'bg-green-100 text-green-800 border border-green-200' : 
                'bg-blue-100 text-blue-800 border border-blue-200'
            }`;
            messageDiv.textContent = message;
            messageDiv.classList.remove('hidden');
            
            // Auto-hide success messages after 3 seconds
            if (type === 'success') {
                setTimeout(() => {
                    hidePaymentProofMessage();
                }, 3000);
            }
        }
    }
    
    // Hide payment proof message
    function hidePaymentProofMessage() {
        const messageDiv = document.getElementById('payment-proof-message');
        if (messageDiv) {
            messageDiv.classList.add('hidden');
            messageDiv.textContent = '';
        }
    }
    
    // Toggle add payment proof form
    function toggleAddPaymentProofForm() {
        const form = document.getElementById('add-payment-proof-form');
        const button = document.getElementById('add-payment-proof-btn');
        if (form) {
            const isHidden = form.classList.contains('hidden');
            form.classList.toggle('hidden');
            
            // Show/hide button based on form visibility
            if (button) {
                if (isHidden) {
                    // Form is being shown, hide button and clear any messages
                    button.classList.add('hidden');
                    hidePaymentProofMessage();
                } else {
                    // Form is being hidden, show button
                    button.classList.remove('hidden');
                }
            }
            
            // Reset form when hiding
            if (!isHidden) {
                resetPaymentProofForm();
                hidePaymentProofMessage();
            }
        }
    }
    
    // Handle add payment proof form submission
    const uploadPaymentProofBtn = document.getElementById('upload-payment-proof-btn');
    if (uploadPaymentProofBtn) {
        uploadPaymentProofBtn.addEventListener('click', async (e) => {
            e.preventDefault();
            e.stopPropagation(); // Prevent event from bubbling to parent form
            
            const userId = document.getElementById('userId').value;
            if (!userId) {
                showPaymentProofMessage('User ID not found', 'error');
                return;
            }
            
            const formData = new FormData();
            const planType = document.getElementById('add-proof-plan-type').value;
            const fileInput = document.getElementById('add-proof-file');
            
            if (!planType) {
                showPaymentProofMessage('Please select a plan type', 'error');
                return;
            }
            
            if (!fileInput.files || fileInput.files.length === 0) {
                showPaymentProofMessage('Please select a file', 'error');
                return;
            }
            
            formData.append('planType', planType);
            formData.append('proof', fileInput.files[0]);
            
            // Disable submit button to prevent double submission
            const originalButtonText = uploadPaymentProofBtn.textContent;
            uploadPaymentProofBtn.disabled = true;
            uploadPaymentProofBtn.textContent = 'Uploading...';
            
            try {
                const response = await fetch(`/admin/users/${userId}/payment-proofs`, {
                    method: 'POST',
                    body: formData
                });
                
                const data = await response.json();
                
                if (response.ok && data.success) {
                    showPaymentProofMessage('Payment proof added successfully', 'success');
                    
                    // Reset form and hide it
                    resetPaymentProofForm();
                    toggleAddPaymentProofForm();
                    
                    // Reload payment proofs (modal stays open)
                    loadPaymentProofs(userId);
                } else {
                    throw new Error(data.error || 'Failed to add payment proof');
                }
            } catch (error) {
                console.error('Error adding payment proof:', error);
                showPaymentProofMessage(error.message || 'Failed to add payment proof', 'error');
            } finally {
                // Re-enable submit button
                uploadPaymentProofBtn.disabled = false;
                uploadPaymentProofBtn.textContent = originalButtonText;
            }
        });
    }

    // Handle edit payment proof form submission
    const editPaymentProofForm = document.getElementById('editPaymentProofForm');
    if (editPaymentProofForm) {
        editPaymentProofForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            e.stopPropagation();
            
            const proofId = document.getElementById('edit-proof-id').value;
            const planType = document.getElementById('edit-proof-plan-type').value;
            const status = document.getElementById('edit-proof-status').value;
            const notes = document.getElementById('edit-proof-notes').value;
            const fileInput = document.getElementById('edit-proof-file');
            
            if (!proofId) {
                toast.show({
                    type: 'error',
                    title: 'Error',
                    message: 'Payment proof ID not found'
                });
                return;
            }
            
            // Use FormData if file is selected, otherwise use JSON
            const hasFile = fileInput.files && fileInput.files.length > 0;
            let body;
            let headers = {};
            
            if (hasFile) {
                // Use FormData for file upload
                const formData = new FormData();
                formData.append('plan_type', planType);
                formData.append('status', status);
                formData.append('notes', notes);
                formData.append('proof', fileInput.files[0]);
                body = formData;
                // Don't set Content-Type header - browser will set it with boundary for FormData
            } else {
                // Use JSON if no file
                headers['Content-Type'] = 'application/json';
                body = JSON.stringify({
                    plan_type: planType,
                    status: status,
                    notes: notes
                });
            }
            
            try {
                const response = await fetch(`/admin/payment-proofs/${proofId}`, {
                    method: 'PUT',
                    headers: headers,
                    body: body
                });
                
                const data = await response.json();
                
                if (response.ok && data.success) {
                    toast.show({
                        type: 'success',
                        title: 'Success',
                        message: 'Payment proof updated successfully'
                    });
                    
                    // Close modal
                    closeEditPaymentProofModal();
                    
                    // Reload payment proofs
                    const userId = document.getElementById('userId').value;
                    if (userId) {
                        loadPaymentProofs(userId);
                    }
                } else {
                    throw new Error(data.error || 'Failed to update payment proof');
                }
            } catch (error) {
                console.error('Error updating payment proof:', error);
                toast.show({
                    type: 'error',
                    title: 'Error',
                    message: error.message || 'Failed to update payment proof'
                });
            }
        });
    }

    // Load initial data
    loadUsers();

    // Add pagination event listeners
    document.getElementById('prev-page').addEventListener('click', () => {
        if (currentPage > 1) {
            currentPage--;
            loadUsers();
        }
    });

    document.getElementById('next-page').addEventListener('click', () => {
        if (currentPage < totalPages) {
            currentPage++;
            loadUsers();
        }
    });
    </script>

