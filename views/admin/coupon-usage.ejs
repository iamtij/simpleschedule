<%- include('../partials/admin-header') %>

<%
// Helper function to determine subscription status
function getSubscriptionStatus(usage) {
    if (usage.is_pro) {
        const expiresAt = usage.pro_expires_at ? new Date(usage.pro_expires_at) : null;
        const now = new Date();
        if (!expiresAt || expiresAt > now) {
            return 'pro';
        }
    }
    if (usage.revenuecat_entitlement_status === 'active') {
        return 'pro';
    }
    if (usage.trial_started_at) {
        const trialStart = new Date(usage.trial_started_at);
        const daysSinceTrial = (new Date() - trialStart) / (1000 * 60 * 60 * 24);
        if (daysSinceTrial <= 5) {
            return 'trial';
        }
    }
    return 'expired';
}

// Helper function to get subscription badge HTML
function getSubscriptionBadge(usage) {
    const status = getSubscriptionStatus(usage);
    if (status === 'pro') {
        return '<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Pro</span>';
    } else if (status === 'trial') {
        return '<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Free Trial</span>';
    } else {
        return '<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Expired</span>';
    }
}

// Helper function to get plan type badge HTML
function getPlanTypeBadge(planType) {
    if (!planType || planType === 'none') {
        return '';
    }
    const bgColor = planType === 'monthly' ? 'bg-purple-100 text-purple-800' : 'bg-indigo-100 text-indigo-800';
    const label = planType === 'monthly' ? 'Monthly' : 'Yearly';
    return `<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${bgColor}">${label}</span>`;
}
%>

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Coupon Usage Details</h1>
            <p class="mt-2 text-gray-600">Viewing usage history for coupon: <%= coupon.code %></p>
        </div>
        <a href="/admin/coupons" class="text-gray-600 hover:text-gray-900 flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Coupons
        </a>
    </div>

    <!-- Coupon Information -->
    <div class="bg-white rounded-lg shadow-sm p-6 mb-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <div>
                <h3 class="text-sm font-medium text-gray-500">Code</h3>
                <p class="mt-1 text-lg font-semibold"><%= coupon.code %></p>
            </div>
            <div>
                <h3 class="text-sm font-medium text-gray-500">Status</h3>
                <p class="mt-1">
                    <span class="px-2 py-1 text-sm font-medium rounded-full 
                        <%= coupon.status === 'active' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                        <%= coupon.status %>
                    </span>
                </p>
            </div>
            <div>
                <h3 class="text-sm font-medium text-gray-500">Usage</h3>
                <p class="mt-1 text-lg font-semibold"><%= coupon.actual_uses %>/<%= coupon.max_uses %></p>
            </div>
            <div>
                <h3 class="text-sm font-medium text-gray-500">Expires</h3>
                <p class="mt-1 text-lg font-semibold">
                    <%= coupon.expires_at ? new Date(coupon.expires_at).toLocaleDateString() : 'Never' %>
                </p>
            </div>
        </div>
        <% if (coupon.description) { %>
            <div class="mt-6">
                <h3 class="text-sm font-medium text-gray-500">Description</h3>
                <p class="mt-1 text-gray-700"><%= coupon.description %></p>
            </div>
        <% } %>
    </div>

    <!-- Usage History -->
    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="px-6 py-4 border-b">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-4 sm:space-y-0">
                <h2 class="text-lg font-medium text-gray-900">Usage History</h2>
                
                <!-- Search and Filters -->
                <div class="flex flex-col sm:flex-row space-y-3 sm:space-y-0 sm:space-x-3">
                    <!-- Search Input -->
                    <div class="relative">
                        <input type="text" id="search-usage" placeholder="Search by name or email..." 
                               class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent w-full sm:w-64">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                        </div>
                        <button id="clear-search-usage" class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-gray-600 hidden">
                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>
                    
                    <!-- Subscription Filter -->
                    <select id="subscription-filter" class="px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="all">All Subscriptions</option>
                        <option value="pro">Pro (Active)</option>
                        <option value="trial">Free Trial</option>
                        <option value="expired">Expired</option>
                    </select>
                    
                    <!-- Plan Type Filter -->
                    <select id="plan-type-filter" class="px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="all">All Plan Types</option>
                        <option value="monthly">Monthly</option>
                        <option value="yearly">Yearly</option>
                        <option value="none">No Plan Type</option>
                    </select>
                </div>
            </div>
        </div>
        <div id="usage-list" class="divide-y divide-gray-200">
            <% if (coupon.usage_details && coupon.usage_details.length > 0) { %>
                <% coupon.usage_details.forEach(usage => { %>
                    <div class="p-6 usage-item" 
                         data-name="<%= (usage.name || '').toLowerCase() %>"
                         data-email="<%= (usage.email || '').toLowerCase() %>"
                         data-subscription="<%= getSubscriptionStatus(usage) %>"
                         data-plan-type="<%= usage.plan_type || 'none' %>">
                        <div class="flex items-center justify-between">
                            <div class="flex-1">
                                <div class="flex items-center space-x-3">
                                    <div>
                                        <h3 class="text-sm font-medium text-gray-900"><%= usage.name %></h3>
                                        <p class="text-sm text-gray-500"><%= usage.email %></p>
                                    </div>
                                    <!-- Subscription Status Badge -->
                                    <div class="flex items-center space-x-2">
                                        <%- getSubscriptionBadge(usage) %>
                                        <%- getPlanTypeBadge(usage.plan_type) %>
                                    </div>
                                </div>
                            </div>
                            <div class="text-sm text-gray-500 ml-4">
                                <%= new Date(usage.used_at).toLocaleString() %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="p-6 text-center text-gray-500">
                    No usage history available
                </div>
            <% } %>
        </div>
        <div id="no-results" class="p-6 text-center text-gray-500 hidden">
            No results found matching your search criteria.
        </div>
    </div>

    <script>
        // Search and filter functionality
        const searchInput = document.getElementById('search-usage');
        const clearSearchBtn = document.getElementById('clear-search-usage');
        const subscriptionFilter = document.getElementById('subscription-filter');
        const planTypeFilter = document.getElementById('plan-type-filter');
        const usageItems = document.querySelectorAll('.usage-item');
        const noResults = document.getElementById('no-results');

        function filterUsage() {
            const searchTerm = searchInput.value.toLowerCase().trim();
            const subscriptionValue = subscriptionFilter.value;
            const planTypeValue = planTypeFilter.value;
            
            let visibleCount = 0;

            usageItems.forEach(item => {
                const name = item.dataset.name || '';
                const email = item.dataset.email || '';
                const subscription = item.dataset.subscription || '';
                const planType = item.dataset.planType || 'none';

                const matchesSearch = !searchTerm || name.includes(searchTerm) || email.includes(searchTerm);
                const matchesSubscription = subscriptionValue === 'all' || subscription === subscriptionValue;
                const matchesPlanType = planTypeValue === 'all' || planType === planTypeValue;

                if (matchesSearch && matchesSubscription && matchesPlanType) {
                    item.classList.remove('hidden');
                    visibleCount++;
                } else {
                    item.classList.add('hidden');
                }
            });

            // Show/hide no results message
            if (visibleCount === 0) {
                noResults.classList.remove('hidden');
            } else {
                noResults.classList.add('hidden');
            }

            // Show/hide clear search button
            if (searchTerm) {
                clearSearchBtn.classList.remove('hidden');
            } else {
                clearSearchBtn.classList.add('hidden');
            }
        }

        searchInput.addEventListener('input', filterUsage);
        clearSearchBtn.addEventListener('click', () => {
            searchInput.value = '';
            filterUsage();
        });
        subscriptionFilter.addEventListener('change', filterUsage);
        planTypeFilter.addEventListener('change', filterUsage);
    </script>
</div>

<%- include('../partials/admin-footer') %> 