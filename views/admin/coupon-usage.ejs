<%- include('../partials/admin-header') %>

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-2xl font-bold">Coupon Usage Details</h1>
            <p class="mt-2 text-gray-600">Viewing usage history for coupon: <%= coupon.code %></p>
        </div>
        <a href="/admin/coupons" class="text-gray-600 hover:text-gray-900 flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Coupons
        </a>
    </div>

    <!-- Coupon Information -->
    <div class="bg-white rounded-lg shadow-sm p-6 mb-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <div>
                <h3 class="text-sm font-medium text-gray-500">Code</h3>
                <p class="mt-1 text-lg font-semibold"><%= coupon.code %></p>
            </div>
            <div>
                <h3 class="text-sm font-medium text-gray-500">Status</h3>
                <p class="mt-1">
                    <span class="px-2 py-1 text-sm font-medium rounded-full 
                        <%= coupon.status === 'active' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                        <%= coupon.status %>
                    </span>
                </p>
            </div>
            <div>
                <h3 class="text-sm font-medium text-gray-500">Usage</h3>
                <p class="mt-1 text-lg font-semibold"><%= coupon.actual_uses %>/<%= coupon.max_uses %></p>
            </div>
            <div>
                <h3 class="text-sm font-medium text-gray-500">Expires</h3>
                <p class="mt-1 text-lg font-semibold">
                    <%= coupon.expires_at ? new Date(coupon.expires_at).toLocaleDateString() : 'Never' %>
                </p>
            </div>
        </div>
        <% if (coupon.description) { %>
            <div class="mt-6">
                <h3 class="text-sm font-medium text-gray-500">Description</h3>
                <p class="mt-1 text-gray-700"><%= coupon.description %></p>
            </div>
        <% } %>
    </div>

    <!-- Usage History -->
    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="px-6 py-4 border-b">
            <h2 class="text-lg font-medium text-gray-900">Usage History</h2>
        </div>
        <div class="divide-y divide-gray-200">
            <% if (coupon.usage_details && coupon.usage_details.length > 0) { %>
                <% coupon.usage_details.forEach(usage => { %>
                    <div class="p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <h3 class="text-sm font-medium text-gray-900"><%= usage.name %></h3>
                                <p class="text-sm text-gray-500"><%= usage.email %></p>
                            </div>
                            <div class="text-sm text-gray-500">
                                <%= new Date(usage.used_at).toLocaleString() %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="p-6 text-center text-gray-500">
                    No usage history available
                </div>
            <% } %>
        </div>
    </div>
</div>

<%- include('../partials/admin-footer') %> 