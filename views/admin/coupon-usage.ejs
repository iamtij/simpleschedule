<%- include('../partials/admin-header') %>
<link href="/css/toast.css" rel="stylesheet">
<script src="/js/toast.js" defer></script>

<!-- Toast Container -->
<div id="toast-container"></div>

<%
// Helper function to determine subscription status
function getSubscriptionStatus(usage) {
    if (usage.is_pro) {
        const expiresAt = usage.pro_expires_at ? new Date(usage.pro_expires_at) : null;
        const now = new Date();
        if (!expiresAt || expiresAt > now) {
            return 'pro';
        }
    }
    if (usage.revenuecat_entitlement_status === 'active') {
        return 'pro';
    }
    if (usage.trial_started_at) {
        const trialStart = new Date(usage.trial_started_at);
        const daysSinceTrial = (new Date() - trialStart) / (1000 * 60 * 60 * 24);
        if (daysSinceTrial <= 5) {
            return 'trial';
        }
    }
    return 'expired';
}

// Helper function to get subscription badge HTML
function getSubscriptionBadge(usage) {
    const status = getSubscriptionStatus(usage);
    if (status === 'pro') {
        return '<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Pro</span>';
    } else if (status === 'trial') {
        return '<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Free Trial</span>';
    } else {
        return '<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Expired</span>';
    }
}

// Helper function to get plan type badge HTML
function getPlanTypeBadge(planType) {
    if (!planType || planType === 'none') {
        return '';
    }
    const bgColor = planType === 'monthly' ? 'bg-purple-100 text-purple-800' : 'bg-indigo-100 text-indigo-800';
    const label = planType === 'monthly' ? 'Monthly' : 'Yearly';
    return `<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${bgColor}">${label}</span>`;
}
%>

<div class="w-full max-w-full px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Coupon Usage Details</h1>
            <p class="mt-2 text-gray-600">Viewing usage history for coupon: <%= coupon.code %></p>
        </div>
        <a href="/admin/coupons" class="text-gray-600 hover:text-gray-900 flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Coupons
        </a>
    </div>

    <!-- Coupon Information -->
    <div class="bg-white rounded-lg shadow-sm p-6 mb-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <div>
                <h3 class="text-sm font-medium text-gray-500">Code</h3>
                <p class="mt-1 text-lg font-semibold"><%= coupon.code %></p>
            </div>
            <div>
                <h3 class="text-sm font-medium text-gray-500">Status</h3>
                <p class="mt-1">
                    <span class="px-2 py-1 text-sm font-medium rounded-full 
                        <%= coupon.status === 'active' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                        <%= coupon.status %>
                    </span>
                </p>
            </div>
            <div>
                <h3 class="text-sm font-medium text-gray-500">Usage</h3>
                <p class="mt-1 text-lg font-semibold"><%= coupon.actual_uses %>/<%= coupon.max_uses %></p>
            </div>
            <div>
                <h3 class="text-sm font-medium text-gray-500">Expires</h3>
                <p class="mt-1 text-lg font-semibold">
                    <%= coupon.expires_at ? new Date(coupon.expires_at).toLocaleDateString() : 'Never' %>
                </p>
            </div>
        </div>
        <% if (coupon.description) { %>
            <div class="mt-6">
                <h3 class="text-sm font-medium text-gray-500">Description</h3>
                <p class="mt-1 text-gray-700"><%= coupon.description %></p>
            </div>
        <% } %>
    </div>

    <!-- Usage History -->
    <div class="bg-white rounded-lg shadow overflow-hidden mb-6">
        <div class="px-6 py-4 border-b border-gray-200">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-4 sm:space-y-0">
                <h2 class="text-lg font-medium text-gray-900">Usage History</h2>
                
                <div class="flex items-center space-x-3">
                    <!-- Search and Filters -->
                    <div class="flex flex-col sm:flex-row space-y-3 sm:space-y-0 sm:space-x-3">
                    <!-- Search Input -->
                    <div class="relative">
                        <input type="text" id="search-usage" placeholder="Search by name or email..." 
                               class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent w-full sm:w-64">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                        </div>
                        <button id="clear-search-usage" class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-gray-600 hidden">
                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>
                    
                    <!-- Subscription Filter -->
                    <select id="subscription-filter" class="px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="all">All Subscriptions</option>
                        <option value="pro">Pro (Active)</option>
                        <option value="trial">Free Trial</option>
                        <option value="expired">Expired</option>
                    </select>
                    
                    <!-- Plan Type Filter -->
                    <select id="plan-type-filter" class="px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="all">All Plan Types</option>
                        <option value="monthly">Monthly</option>
                        <option value="yearly">Yearly</option>
                        <option value="none">No Plan Type</option>
                    </select>
                    </div>
                    
                    <!-- Send Email Button -->
                    <button id="sendEmailButton" 
                            class="bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 disabled:bg-gray-400 disabled:cursor-not-allowed flex items-center space-x-2"
                            disabled>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                        <span>Send Email to Selected (<span id="selectedCount">0</span>)</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Table Container -->
    <div class="bg-white rounded-lg shadow overflow-x-auto" style="position: relative; z-index: 1;">
            <% if (coupon.usage_details && coupon.usage_details.length > 0) { %>
                <table class="min-w-full divide-y divide-gray-200" style="min-width: 1200px;">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" style="min-width: 50px;">
                                <input type="checkbox" id="select-all-checkbox" class="h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded">
                            </th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" style="min-width: 180px;">Name</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" style="min-width: 200px;">Email</th>
                            <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" style="min-width: 90px;">Status</th>
                            <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" style="min-width: 90px;">Pro</th>
                            <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" style="min-width: 100px;">Plan Type</th>
                            <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" style="min-width: 120px;">Trial Days Left</th>
                            <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" style="min-width: 110px;">Pro Started</th>
                            <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" style="min-width: 110px;">Pro Expires</th>
                            <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" style="min-width: 100px;">Joined</th>
                            <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" style="min-width: 150px;">Used At</th>
                        </tr>
                    </thead>
                    <tbody id="usage-table-body" class="bg-white divide-y divide-gray-200">
                        <% coupon.usage_details.forEach(usage => { %>
                            <tr class="usage-item" 
                                data-name="<%= (usage.name || '').toLowerCase() %>"
                                data-email="<%= (usage.email || '').toLowerCase() %>"
                                data-subscription="<%= getSubscriptionStatus(usage) %>"
                                data-plan-type="<%= usage.plan_type || 'none' %>">
                                <td class="px-4 py-4 whitespace-nowrap">
                                    <input type="checkbox" 
                                           class="user-checkbox h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded" 
                                           value="<%= usage.user_id %>">
                                </td>
                                <td class="px-4 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 h-10 w-10">
                                            <div class="h-10 w-10 rounded-full bg-gray-200 flex items-center justify-center">
                                                <span class="text-lg font-medium text-gray-600">
                                                    <%= usage.name ? usage.name.charAt(0).toUpperCase() : '?' %>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="ml-4">
                                            <div class="text-sm font-medium text-gray-900"><%= usage.name || 'N/A' %></div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-4 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900"><%= usage.email %></div>
                                </td>
                                <td class="px-3 py-4 whitespace-nowrap">
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                        <%= usage.status === 'active' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                                        <%= usage.status %>
                                    </span>
                                </td>
                                <td class="px-3 py-4 whitespace-nowrap">
                                    <% if (usage.is_pro) { %>
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-purple-100 text-purple-800">Pro</span>
                                    <% } else if (usage.trial_days_left !== null && usage.trial_days_left > 0) { %>
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">FREE</span>
                                    <% } else { %>
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">Expired</span>
                                    <% } %>
                                </td>
                                <td class="px-3 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900">
                                        <% if (usage.plan_type) { %>
                                            <% if (usage.plan_type === 'monthly') { %>
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">Monthly</span>
                                            <% } else { %>
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Yearly</span>
                                            <% } %>
                                        <% } else { %>
                                            -
                                        <% } %>
                                    </div>
                                </td>
                                <td class="px-3 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900">
                                        <% if (usage.trial_days_left !== null) { %>
                                            <% if (usage.trial_days_left > 0) { %>
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800"><%= usage.trial_days_left %> day<%= usage.trial_days_left !== 1 ? 's' : '' %></span>
                                            <% } else { %>
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">0</span>
                                            <% } %>
                                        <% } else { %>
                                            -
                                        <% } %>
                                    </div>
                                </td>
                                <td class="px-3 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900">
                                        <%= usage.pro_started_at ? new Date(usage.pro_started_at).toLocaleDateString() : '-' %>
                                    </div>
                                </td>
                                <td class="px-3 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900">
                                        <%= usage.pro_expires_at ? new Date(usage.pro_expires_at).toLocaleDateString() : '-' %>
                                    </div>
                                </td>
                                <td class="px-3 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900">
                                        <%= usage.created_at ? new Date(usage.created_at).toLocaleDateString() : '-' %>
                                    </div>
                                </td>
                                <td class="px-3 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-500">
                                        <%= new Date(usage.used_at).toLocaleString() %>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <div class="p-6 text-center text-gray-500">
                    No usage history available
                </div>
            <% } %>
            <div id="no-results" class="p-6 text-center text-gray-500 hidden">
                No results found matching your search criteria.
            </div>
        </div>
    </div>

    <script>
        // Search and filter functionality
        const searchInput = document.getElementById('search-usage');
        const clearSearchBtn = document.getElementById('clear-search-usage');
        const subscriptionFilter = document.getElementById('subscription-filter');
        const planTypeFilter = document.getElementById('plan-type-filter');
        const usageItems = document.querySelectorAll('.usage-item');
        const noResults = document.getElementById('no-results');
        const selectAllCheckbox = document.getElementById('select-all-checkbox');

        // Select all functionality
        if (selectAllCheckbox) {
            selectAllCheckbox.addEventListener('change', (e) => {
                const checkboxes = document.querySelectorAll('.user-checkbox');
                checkboxes.forEach(cb => {
                    const row = cb.closest('.usage-item');
                    if (row && !row.classList.contains('hidden')) {
                        cb.checked = e.target.checked;
                    }
                });
                updateSendButton();
            });
        }

        function filterUsage() {
            const searchTerm = searchInput.value.toLowerCase().trim();
            const subscriptionValue = subscriptionFilter.value;
            const planTypeValue = planTypeFilter.value;
            
            let visibleCount = 0;

            usageItems.forEach(item => {
                const name = item.dataset.name || '';
                const email = item.dataset.email || '';
                const subscription = item.dataset.subscription || '';
                const planType = item.dataset.planType || 'none';

                const matchesSearch = !searchTerm || name.includes(searchTerm) || email.includes(searchTerm);
                const matchesSubscription = subscriptionValue === 'all' || subscription === subscriptionValue;
                const matchesPlanType = planTypeValue === 'all' || planType === planTypeValue;

                if (matchesSearch && matchesSubscription && matchesPlanType) {
                    item.classList.remove('hidden');
                    visibleCount++;
                } else {
                    item.classList.add('hidden');
                    // Uncheck if hidden
                    const checkbox = item.querySelector('.user-checkbox');
                    if (checkbox) checkbox.checked = false;
                }
            });

            // Show/hide no results message
            if (visibleCount === 0) {
                noResults.classList.remove('hidden');
            } else {
                noResults.classList.add('hidden');
            }

            // Show/hide clear search button
            if (searchTerm) {
                clearSearchBtn.classList.remove('hidden');
            } else {
                clearSearchBtn.classList.add('hidden');
            }
            
            // Update select all checkbox state
            if (selectAllCheckbox) {
                const visibleCheckboxes = Array.from(document.querySelectorAll('.usage-item:not(.hidden) .user-checkbox'));
                const checkedVisible = visibleCheckboxes.filter(cb => cb.checked);
                selectAllCheckbox.checked = visibleCheckboxes.length > 0 && checkedVisible.length === visibleCheckboxes.length;
                selectAllCheckbox.indeterminate = checkedVisible.length > 0 && checkedVisible.length < visibleCheckboxes.length;
            }
            
            updateSendButton();
        }

        searchInput.addEventListener('input', filterUsage);
        clearSearchBtn.addEventListener('click', () => {
            searchInput.value = '';
            filterUsage();
        });
        subscriptionFilter.addEventListener('change', filterUsage);
        planTypeFilter.addEventListener('change', filterUsage);
        
        // Email functionality
        let selectedUserIds = [];
        
        // Update send button state based on selections
        function updateSendButton() {
            const checkboxes = document.querySelectorAll('.user-checkbox:checked');
            selectedUserIds = Array.from(checkboxes).map(cb => parseInt(cb.value));
            const sendButton = document.getElementById('sendEmailButton');
            if (sendButton) {
                sendButton.disabled = selectedUserIds.length === 0;
            }
            
            const countSpan = document.getElementById('selectedCount');
            if (countSpan) {
                countSpan.textContent = selectedUserIds.length;
            }
        }
        
        // Update selectedUserIds when checkboxes change
        document.addEventListener('change', (e) => {
            if (e.target.classList.contains('user-checkbox')) {
                updateSendButton();
            }
        });
        
        // Email templates
        let templates = [];
        
        // Load templates
        async function loadTemplates() {
            try {
                const response = await fetch('/admin/templates/data');
                if (response.ok) {
                    const data = await response.json();
                    templates = data.templates || [];
                    const select = document.getElementById('emailTemplateSelect');
                    if (select) {
                        select.innerHTML = '<option value="">-- Select a template or create new --</option>';
                        templates.forEach(template => {
                            const option = document.createElement('option');
                            option.value = template.id;
                            option.textContent = template.name;
                            select.appendChild(option);
                        });
                    }
                }
            } catch (error) {
                // Error loading templates - silently fail
            }
        }
        
        // Load template when selected
        function loadTemplate() {
            const templateId = document.getElementById('emailTemplateSelect').value;
            if (!templateId) return;
            
            const template = templates.find(t => t.id == templateId);
            if (template) {
                document.getElementById('emailSubject').value = template.subject;
                document.getElementById('emailBody').value = template.body;
            }
        }
        
        // Email form submission handler
        let emailFormHandler = null;
        
        function setupEmailFormHandler() {
            const sendEmailForm = document.getElementById('sendEmailForm');
            if (!sendEmailForm) {
                return;
            }
            
            // Remove existing listener if it exists
            if (emailFormHandler) {
                sendEmailForm.removeEventListener('submit', emailFormHandler);
            }
            
            // Create new handler
            emailFormHandler = async (e) => {
                e.preventDefault();
                
                if (selectedUserIds.length === 0) {
                    if (typeof toast !== 'undefined' && toast.show) {
                        toast.show({
                            type: 'warning',
                            title: 'No Users Selected',
                            message: 'Please select at least one user before sending emails.'
                        });
                    } else {
                        alert('Please select at least one user');
                    }
                    return;
                }
                
                const couponId = document.getElementById('emailCouponId').value;
                const subject = document.getElementById('emailSubject').value;
                const body = document.getElementById('emailBody').value;
                const templateId = document.getElementById('emailTemplateSelect').value;
                
                const sendButton = document.getElementById('sendEmailSubmitButton');
                sendButton.disabled = true;
                sendButton.textContent = 'Sending...';
                
                try {
                    const response = await fetch(`/admin/coupons/${couponId}/send-email-to-users`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            template_id: templateId || null,
                            subject: subject,
                            body: body,
                            user_ids: selectedUserIds
                        })
                    });
                    
                    const data = await response.json();
                    
                    if (response.ok) {
                        const successCount = data.results ? data.results.filter(r => r.success).length : 0;
                        const errorCount = data.results ? data.results.filter(r => !r.success).length : 0;
                        
                        if (successCount > 0) {
                            if (typeof toast !== 'undefined' && toast.show) {
                                if (errorCount > 0) {
                                    toast.show({
                                        type: 'warning',
                                        title: 'Emails Sent (Partial)',
                                        message: `Successfully sent ${successCount} email(s), ${errorCount} failed.`
                                    });
                                } else {
                                    toast.show({
                                        type: 'success',
                                        title: 'Emails Sent Successfully',
                                        message: `Successfully sent ${successCount} email(s). They should arrive shortly.`
                                    });
                                }
                            } else {
                                alert(`Successfully sent ${successCount} email(s)${errorCount > 0 ? `, ${errorCount} failed` : ''}`);
                            }
                            closeSendEmailModal();
                            // Clear selections
                            document.querySelectorAll('.user-checkbox').forEach(cb => cb.checked = false);
                            updateSendButton();
                        } else {
                            if (typeof toast !== 'undefined' && toast.show) {
                                toast.show({
                                    type: 'error',
                                    title: 'No Emails Sent',
                                    message: 'No emails were sent. Please check the recipients and try again.'
                                });
                            } else {
                                alert('No emails were sent. Please check the recipients and try again.');
                            }
                        }
                    } else {
                        if (typeof toast !== 'undefined' && toast.show) {
                            toast.show({
                                type: 'error',
                                title: 'Error Sending Emails',
                                message: data.error || 'Failed to send emails. Please try again.'
                            });
                        } else {
                            alert('Error: ' + (data.error || 'Failed to send emails'));
                        }
                    }
                } catch (error) {
                    if (typeof toast !== 'undefined' && toast.show) {
                        toast.show({
                            type: 'error',
                            title: 'Error',
                            message: error.message || 'An unexpected error occurred while sending emails.'
                        });
                    } else {
                        alert('Error: ' + error.message);
                    }
                } finally {
                    sendButton.disabled = false;
                    sendButton.textContent = 'Send Emails';
                }
            };
            
            // Add the listener
            sendEmailForm.addEventListener('submit', emailFormHandler);
        }
        
        // Open send email modal
        function openSendEmailModal() {
            if (selectedUserIds.length === 0) {
                if (typeof toast !== 'undefined' && toast.show) {
                    toast.show({
                        type: 'warning',
                        title: 'No Users Selected',
                        message: 'Please select at least one user before sending emails.'
                    });
                } else {
                    alert('Please select at least one user');
                }
                return;
            }
            document.getElementById('sendEmailModal').classList.remove('hidden');
            loadTemplates();
            updateSendButton();
            // Setup form handler when modal opens (form now exists in DOM)
            setTimeout(setupEmailFormHandler, 100);
        }
        
        // Close send email modal
        function closeSendEmailModal() {
            document.getElementById('sendEmailModal').classList.add('hidden');
        }
        
        // Send email button click
        const sendEmailButton = document.getElementById('sendEmailButton');
        if (sendEmailButton) {
            sendEmailButton.addEventListener('click', openSendEmailModal);
        }
        
        // Also try to setup form handler on page load (in case modal is already visible)
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', setupEmailFormHandler);
        } else {
            setupEmailFormHandler();
        }
    </script>
</div>

<!-- Send Email Modal -->
<div id="sendEmailModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border w-full max-w-3xl shadow-lg rounded-md bg-white">
        <div class="mt-3">
            <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">Send Email to Selected Users</h3>
            <form id="sendEmailForm" class="space-y-4">
                <input type="hidden" id="emailCouponId" value="<%= coupon.id %>">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Template (Optional)</label>
                    <select id="emailTemplateSelect" class="w-full px-3 py-2 border rounded-lg" onchange="loadTemplate()">
                        <option value="">-- Select a template or create new --</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Subject *</label>
                    <input type="text" id="emailSubject" required
                        class="w-full px-3 py-2 border rounded-lg"
                        placeholder="Email subject (supports {{variables}})">
                    <p class="mt-1 text-xs text-gray-500">Available: {{user_name}}, {{user_email}}, {{coupon_code}}, {{coupon_description}}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Body *</label>
                    <textarea id="emailBody" required rows="12"
                        class="w-full px-3 py-2 border rounded-lg font-mono text-sm"
                        placeholder="Email body (HTML supported, supports {{variables}})"></textarea>
                    <p class="mt-1 text-xs text-gray-500">HTML is supported. Use {{variable_name}} for dynamic content.</p>
                </div>
                <div id="emailRecipientsInfo" class="bg-gray-50 p-3 rounded-lg">
                    <p class="text-sm text-gray-600"><span id="selectedCount">0</span> user(s) selected</p>
                </div>
                <div class="flex justify-end space-x-3">
                    <button type="button" onclick="closeSendEmailModal()"
                        class="bg-gray-200 text-gray-800 px-4 py-2 rounded-lg hover:bg-gray-300">
                        Cancel
                    </button>
                    <button type="submit" id="sendEmailSubmitButton"
                        class="bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700">
                        Send Emails
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/admin-footer') %> 