            const data = <%- JSON.stringify(availabilitySettings || {}) %>;
            
            if (data && Object.keys(data).length > 0) {
                
                // Group availability blocks by day
                const blocksByDay = {};
                if (data.availability_blocks) {
                    data.availability_blocks.forEach(block => {
                        if (!blocksByDay[block.day_of_week]) {
                            blocksByDay[block.day_of_week] = [];
                        }
                        blocksByDay[block.day_of_week].push({
                            start: block.start_time,
                            end: block.end_time
