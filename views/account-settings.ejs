                    <!-- Sync Settings -->
                    <div id="google-calendar-settings" class="hidden">
                        <div class="border-t border-gray-200 pt-6">
                            <h3 class="text-sm font-medium text-gray-900 mb-4">Sync Settings</h3>
                            <div class="space-y-4">
                                <div class="flex items-center justify-between">
