        // Simple Accordion Toggle Function
        function toggleAccordion(section) {
            const content = document.getElementById(section + '-content');
            const icon = document.getElementById(section + '-icon');
            
            // List of all accordion sections
            const allSections = ['profile', 'integrations', 'availability'];
            
            if (content.classList.contains('accordion-hidden') || content.classList.contains('hidden')) {
                // Expand - close all other accordions first
                allSections.forEach(s => {
                    if (s !== section) {
                        const otherContent = document.getElementById(s + '-content');
                        const otherIcon = document.getElementById(s + '-icon');
                        if (otherContent) {
                            otherContent.classList.add('accordion-hidden');
                            otherContent.classList.add('hidden');
                        }
                        if (otherIcon) {
                            otherIcon.classList.add('rotate-180');
                        }
                    }
                });
                
                // Now expand the selected accordion
                content.classList.remove('accordion-hidden');
                content.classList.remove('hidden');
                if (icon) icon.classList.remove('rotate-180');
            } else {
                // Collapse
                content.classList.add('accordion-hidden');
                if (icon) icon.classList.add('rotate-180');
            }
        }

