                    <input type="text" class="meeting-link-input w-full border rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
                           placeholder="Zoom, Google Meet, etc." value="${meetingLink || ''}">
                </div>
                <div class="flex items-end">
                    <button type="button" class="remove-duration-btn text-red-600 hover:text-red-800 text-sm font-medium">
                        Remove
                    </button>
                </div>
            `;
            
            container.appendChild(row);
            
            // Add remove button handler
            const removeBtn = row.querySelector('.remove-duration-btn');
            removeBtn.addEventListener('click', function() {
                row.remove();
                updateAddButtonState();
                updateDurationLinks();
            });
            
            // Add validation for unique durations
            const select = row.querySelector('.duration-select');
            select.addEventListener('change', function() {
                validateDurations();
                updateDurationLinks();
            });
            
            updateAddButtonState();
            updateDurationLinks();
        }
        
        // Update add button state
        function updateAddButtonState() {
            const container = document.getElementById('meeting-durations-container');
            const addBtn = document.getElementById('add-duration-btn');
            
            if (!container || !addBtn) return;
            
            const currentRows = container.querySelectorAll('.duration-row');
            if (currentRows.length >= 3) {
                addBtn.disabled = true;
            } else {
                addBtn.disabled = false;
            }
        }
        
        // Validate that all durations are unique
        function validateDurations() {
            const container = document.getElementById('meeting-durations-container');
            if (!container) return;
            
            const selects = container.querySelectorAll('.duration-select');
            const values = Array.from(selects).map(select => select.value).filter(v => v);
            const uniqueValues = [...new Set(values)];
            
            if (values.length !== uniqueValues.length) {
                // Highlight duplicate selects
                selects.forEach(select => {
                    if (values.filter(v => v === select.value).length > 1 && select.value) {
                        select.classList.add('border-red-500');
                    } else {
                        select.classList.remove('border-red-500');
                    }
                });
            } else {
                selects.forEach(select => {
                    select.classList.remove('border-red-500');
                });
            }
        }
        
        // Update duration booking links display
        function updateDurationLinks() {
            const container = document.getElementById('meeting-durations-container');
            const linksContainer = document.getElementById('duration-links-container');
            const noLinksMsg = document.getElementById('no-duration-links');
            
            if (!container || !linksContainer || !noLinksMsg) return;
            
            const rows = container.querySelectorAll('.duration-row');
            const durations = [];
            
            rows.forEach(row => {
                const select = row.querySelector('.duration-select');
                if (select && select.value) {
                    durations.push({
                        minutes: parseInt(select.value),
                        display: `${select.value} minutes`
                    });
                }
            });
            
            // Clear existing links
            linksContainer.innerHTML = '';
            
            if (durations.length === 0) {
                noLinksMsg.classList.remove('hidden');
                return;
            }
            
            noLinksMsg.classList.add('hidden');
            
            const username = '<%= user.username %>';
            const baseUrl = window.location.origin;
            
            durations.forEach(duration => {
                const linkDiv = document.createElement('div');
                linkDiv.className = 'flex items-center gap-3 p-3 bg-gray-50 border rounded-lg';
                
                const fullUrl = `${baseUrl}/booking/${username}/${duration.minutes}`;
                
                linkDiv.innerHTML = `
                    <div class="flex-1">
                        <div class="text-sm font-medium text-gray-700">${duration.display}</div>
                        <div class="text-xs text-gray-500 font-mono mt-1">${fullUrl}</div>
                    </div>
                    <button type="button" class="copy-duration-link-btn inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" data-url="${fullUrl}">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                        </svg>
                        Copy
                    </button>
                `;
                
                linksContainer.appendChild(linkDiv);
                
                // Add copy button handler
                const copyBtn = linkDiv.querySelector('.copy-duration-link-btn');
                copyBtn.addEventListener('click', function() {
                    const url = this.getAttribute('data-url');
                    copyToClipboard(url, this);
                });
            });
        }
        
        // Copy to clipboard helper
        function copyToClipboard(text, button) {
            if (navigator.clipboard && window.isSecureContext) {
                navigator.clipboard.writeText(text).then(() => {
                    showCopySuccess(button);
                }).catch(() => {
                    fallbackCopy(text, button);
                });
            } else {
                fallbackCopy(text, button);
            }
        }
        
        function fallbackCopy(text, button) {
            const textArea = document.createElement('textarea');
            textArea.value = text;
            textArea.style.position = 'fixed';
            textArea.style.left = '-999999px';
            textArea.style.top = '-999999px';
            document.body.appendChild(textArea);
            textArea.focus();
            textArea.select();
            
            try {
                document.execCommand('copy');
                showCopySuccess(button);
            } catch (err) {
                if (typeof toast !== 'undefined') {
                    toast.show({
                        type: 'error',
                        title: 'Error',
                        message: 'Failed to copy link. Please copy manually.'
                    });
                } else {
                    alert('Failed to copy link. Please copy manually.');
                }
            }
            
            document.body.removeChild(textArea);
        }
        
        function showCopySuccess(button) {
            const originalHTML = button.innerHTML;
            button.innerHTML = '<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>Copied!';
            button.classList.add('text-green-600', 'border-green-300');
            
            if (typeof toast !== 'undefined') {
                toast.show({
                    type: 'success',
                    title: 'Copied!',
                    message: 'Booking link copied to clipboard'
                });
            }
            
            setTimeout(() => {
                button.innerHTML = originalHTML;
                button.classList.remove('text-green-600', 'border-green-300');
            }, 2000);
        }
    </script>
