        // Convert time string (HH:MM) to minutes since midnight
        function timeToMinutes(timeStr) {
            const [hours, minutes] = timeStr.split(':').map(Number);
            return hours * 60 + minutes;
        }

        // Convert minutes to time string (HH:MM)
        function minutesToTime(minutes) {
            const hours = Math.floor(minutes / 60);
            const mins = minutes % 60;
            return `${hours.toString().padStart(2, '0')}:${mins.toString().padStart(2, '0')}`;
        }

        // Check if two time blocks overlap
        function blocksOverlap(block1, block2) {
            const start1 = timeToMinutes(block1.start);
            const end1 = timeToMinutes(block1.end);
            const start2 = timeToMinutes(block2.start);
            const end2 = timeToMinutes(block2.end);
            
            // Blocks overlap if one starts before the other ends
            return (start1 < end2 && start2 < end1);
        }

        // Validate all time blocks for conflicts
        function validateTimeBlocks() {
            const conflicts = [];
            const dayNames = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
            
            // Check each day
            for (let dayIndex = 0; dayIndex < 7; dayIndex++) {
                const timeBlocksContainer = document.querySelector(`.time-blocks-container[data-day="${dayIndex}"]`);
                if (!timeBlocksContainer) continue;
                
                const timeBlocks = timeBlocksContainer.querySelectorAll('.time-block');
                const validBlocks = [];
                
                // Collect all valid blocks for this day
                timeBlocks.forEach((blockElement, index) => {
                    const startInput = blockElement.querySelector('.block-start');
                    const endInput = blockElement.querySelector('.block-end');
                    
                    if (startInput && endInput && startInput.value && endInput.value) {
                        // Validate start < end
                        if (startInput.value < endInput.value) {
                            validBlocks.push({
                                index: index,
                                element: blockElement,
                                start: startInput.value,
                                end: endInput.value,
                                startInput: startInput,
                                endInput: endInput
                            });
                        }
                    }
                });
                
                // Check for overlaps within this day
                if (validBlocks.length > 1) {
                    for (let i = 0; i < validBlocks.length; i++) {
                        for (let j = i + 1; j < validBlocks.length; j++) {
                            const block1 = validBlocks[i];
                            const block2 = validBlocks[j];
                            
                            if (blocksOverlap(block1, block2)) {
                                conflicts.push({
                                    day: dayIndex,
                                    dayName: dayNames[dayIndex],
                                    block1: block1,
                                    block2: block2
                                });
                            }
                        }
                    }
                }
            }
            
            return conflicts;
        }

        // Show conflict errors and highlight conflicting blocks
        function showConflicts(conflicts) {
            const dayNames = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
            
            // Group conflicts by day
            const conflictsByDay = {};
            conflicts.forEach(conflict => {
                if (!conflictsByDay[conflict.day]) {
                    conflictsByDay[conflict.day] = [];
                }
                conflictsByDay[conflict.day].push(conflict);
            });
            
            // Build error message
            let errorMessage = 'Time block conflicts detected:\n\n';
            
            Object.keys(conflictsByDay).forEach(dayIndex => {
                const dayConflicts = conflictsByDay[dayIndex];
                const dayName = dayNames[parseInt(dayIndex)];
                
                errorMessage += `${dayName}:\n`;
                
                dayConflicts.forEach(conflict => {
                    const block1Time = `${conflict.block1.start} - ${conflict.block1.end}`;
                    const block2Time = `${conflict.block2.start} - ${conflict.block2.end}`;
                    errorMessage += `   Blocks "${block1Time}" and "${block2Time}" overlap\n`;
                    
                    // Highlight conflicting blocks
                    conflict.block1.element.classList.add('border-red-500', 'border-2', 'bg-red-50');
                    conflict.block2.element.classList.add('border-red-500', 'border-2', 'bg-red-50');
                });
                
                errorMessage += '\n';
            });
            
            errorMessage += 'Please adjust the overlapping time blocks and try again.';
            
            // Show toast notification
            if (typeof toast !== 'undefined' && toast.show) {
                toast.show({
                    type: 'error',
                    title: 'Time Block Conflicts',
                    message: errorMessage.replace(/\n/g, '<br>')
                });
            } else {
                // Fallback alert if toast is not available
                alert(errorMessage);
            }
            
            // Scroll to first conflict
            if (conflicts.length > 0) {
                const firstConflict = conflicts[0];
                const dayContainer = document.querySelector(`.day-container[data-day="${firstConflict.day}"]`);
                if (dayContainer) {
                    dayContainer.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }
            }
        }

