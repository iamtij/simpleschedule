        // Handle success/error messages from URL parameters
        function handleUrlMessages() {
            const urlParams = new URLSearchParams(window.location.search);
            const success = urlParams.get('success');
            const error = urlParams.get('error');
            
            if (success === 'google_connected') {
                // Check if this was a Sheets connection
                const wasConnectingSheets = sessionStorage.getItem('connecting_google_sheets') === 'true';
                sessionStorage.removeItem('connecting_google_sheets'); // Clear the flag
                
                let message = 'Google Calendar has been connected successfully';
                if (wasConnectingSheets) {
                    message = 'Google account connected successfully. You can now use Google Sheets integration.';
                }
                
                toast.show({
                    type: 'success',
                    title: 'Connected!',
                    message: message
                });
                // Clear the URL parameters
                window.history.replaceState({}, document.title, window.location.pathname);
                
                // Refresh status if connecting for Sheets
                if (wasConnectingSheets) {
                    setTimeout(() => {
                        if (typeof checkGoogleSheetsStatus === 'function') {
                            checkGoogleSheetsStatus();
                        }
                        if (typeof checkGoogleCalendarStatus === 'function') {
                            checkGoogleCalendarStatus();
                        }
                    }, 500);
                }
            }
            
            if (error) {
                let errorMessage = 'An error occurred';
                switch (error) {
                    case 'invalid_state':
                        errorMessage = 'Invalid authentication state. Please try again.';
                        break;
                    case 'auth_denied':
                        errorMessage = 'Authorization was denied. Please try again.';
                        break;
                    case 'connection_failed':
                        errorMessage = 'Failed to connect Google Calendar. Please try again.';
                        break;
                    case 'auth_init_failed':
                        errorMessage = 'Failed to initiate Google Calendar connection.';
                        break;
