    </div>
    <script>
        // Toast notification system
        const toast = {
            show: function({ type = 'info', title = '', message = '' }) {
                const toastContainer = document.getElementById('toast-container') || this.createContainer();
                const toastElement = document.createElement('div');
                toastElement.className = `fixed bottom-4 right-4 bg-white border ${type === 'error' ? 'border-red-500' : 'border-green-500'} rounded-lg shadow-lg p-4 mb-4 transition-opacity duration-500`;
                toastElement.innerHTML = `
                    <div class="flex items-center">
                        <div class="ml-3">
                            ${title ? `<h3 class="text-sm font-medium ${type === 'error' ? 'text-red-800' : 'text-green-800'}">${title}</h3>` : ''}
                            <div class="mt-1 text-sm ${type === 'error' ? 'text-red-700' : 'text-green-700'}">${message}</div>
                        </div>
                        <button class="ml-4" onclick="this.parentElement.parentElement.remove()">
                            <span class="sr-only">Close</span>
                            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                            </svg>
                        </button>
                    </div>
                `;
                toastContainer.appendChild(toastElement);
                setTimeout(() => {
                    toastElement.remove();
                }, 5000);
            },
            createContainer: function() {
                const container = document.createElement('div');
                container.id = 'toast-container';
                container.className = 'fixed bottom-4 right-4 z-50';
                document.body.appendChild(container);
                return container;
            }
        };
    </script>
