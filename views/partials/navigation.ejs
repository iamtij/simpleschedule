<!-- Navigation Component -->
<nav class="bg-white shadow-lg border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <!-- Logo and Main Navigation -->
            <div class="flex items-center">
                <a href="/dashboard" class="text-xl font-bold text-gray-900 hover:text-blue-600 transition-colors">
                    isked
                </a>
                
                <!-- Desktop Navigation Links -->
                <div class="hidden md:ml-8 md:flex md:space-x-6">
                    <a href="/dashboard" 
                       class="<%= currentPage === 'dashboard' ? 'text-blue-600 bg-blue-50' : 'text-gray-700 hover:text-blue-600' %> px-3 py-2 rounded-md text-sm font-medium transition-colors">
                        Dashboard
                    </a>
                    <a href="/bookings" 
                       class="<%= currentPage === 'bookings' ? 'text-blue-600 bg-blue-50' : 'text-gray-700 hover:text-blue-600' %> px-3 py-2 rounded-md text-sm font-medium transition-colors">
                        Bookings
                    </a>
                    <a href="/contacts" 
                       class="<%= currentPage === 'contacts' ? 'text-blue-600 bg-blue-50' : 'text-gray-700 hover:text-blue-600' %> px-3 py-2 rounded-md text-sm font-medium transition-colors">
                        Contacts
                    </a>
                    <a href="/settings" 
                       class="<%= currentPage === 'settings' ? 'text-blue-600 bg-blue-50' : 'text-gray-700 hover:text-blue-600' %> px-3 py-2 rounded-md text-sm font-medium transition-colors">
                        Settings
                    </a>
                </div>
            </div>

            <!-- Mobile menu button -->
            <div class="md:hidden">
                <button id="mobile-menu-button" 
                        class="inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-blue-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500"
                        aria-expanded="false">
                    <span class="sr-only">Open main menu</span>
                    <!-- Hamburger icon -->
                    <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                    <!-- X icon (hidden by default) -->
                    <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <!-- Desktop User Menu -->
            <div class="hidden md:flex md:items-center md:space-x-4">
                <span class="text-sm text-gray-600">Welcome, <%= user.display_name || user.username %></span>
                <div class="relative">
                    <button id="account-menu-button" 
                            class="flex items-center space-x-2 p-2 rounded-lg hover:bg-gray-100 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500"
                            aria-expanded="false">
                        <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                        </div>
                        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>

                    <!-- Dropdown Menu -->
                    <div id="account-menu" 
                         class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg py-1 hidden z-50 border border-gray-200"
                         role="menu">
                        <a href="/auth/logout" 
                           class="block px-4 py-2 text-red-600 hover:bg-red-50 transition-colors"
                           role="menuitem">
                            Log Out
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Mobile Navigation Menu -->
        <div id="mobile-menu" class="md:hidden hidden">
            <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-gray-50 border-t border-gray-200">
                <a href="/dashboard" 
                   class="<%= currentPage === 'dashboard' ? 'text-blue-600 bg-blue-50' : 'text-gray-700 hover:text-blue-600 hover:bg-gray-100' %> block px-3 py-2 rounded-md text-base font-medium transition-colors">
                    Dashboard
                </a>
                <a href="/bookings" 
                   class="<%= currentPage === 'bookings' ? 'text-blue-600 bg-blue-50' : 'text-gray-700 hover:text-blue-600 hover:bg-gray-100' %> block px-3 py-2 rounded-md text-base font-medium transition-colors">
                    Bookings
                </a>
                <a href="/contacts" 
                   class="<%= currentPage === 'contacts' ? 'text-blue-600 bg-blue-50' : 'text-gray-700 hover:text-blue-600 hover:bg-gray-100' %> block px-3 py-2 rounded-md text-base font-medium transition-colors">
                    Contacts
                </a>
                <a href="/settings" 
                   class="<%= currentPage === 'settings' ? 'text-blue-600 bg-blue-50' : 'text-gray-700 hover:text-blue-600 hover:bg-gray-100' %> block px-3 py-2 rounded-md text-base font-medium transition-colors">
                    Settings
                </a>
                
                <!-- Mobile User Info -->
                <div class="border-t border-gray-200 pt-3 mt-3">
                    <div class="px-3 py-2 text-sm text-gray-600">
                        Welcome, <%= user.display_name || user.username %>
                    </div>
                    <a href="/auth/logout" class="block px-3 py-2 text-red-600 hover:bg-red-50 hover:bg-gray-100 rounded-md transition-colors">
                        Log Out
                    </a>
                </div>
            </div>
        </div>
    </div>
</nav>

<script>
// Navigation functionality
document.addEventListener('DOMContentLoaded', function() {
    initializeNavigation();
});

function initializeNavigation() {
    // Mobile menu functionality
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener('click', function() {
            const isExpanded = this.getAttribute('aria-expanded') === 'true';
            
            // Toggle mobile menu
            mobileMenu.classList.toggle('hidden');
            this.setAttribute('aria-expanded', !isExpanded);
            
            // Toggle hamburger icon
            const hamburgerIcon = this.querySelector('.block');
            const closeIcon = this.querySelector('.hidden');
            hamburgerIcon.classList.toggle('hidden');
            hamburgerIcon.classList.toggle('block');
            closeIcon.classList.toggle('hidden');
            closeIcon.classList.toggle('block');
        });
    }

    // Account menu functionality
    const accountMenuButton = document.getElementById('account-menu-button');
    const accountMenu = document.getElementById('account-menu');
    
    if (accountMenuButton && accountMenu) {
        accountMenuButton.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            const isExpanded = this.getAttribute('aria-expanded') === 'true';
            
            accountMenu.classList.toggle('hidden');
            this.setAttribute('aria-expanded', !isExpanded);
        });

        // Close menu when clicking outside
        document.addEventListener('click', function(e) {
            if (!accountMenu.contains(e.target) && !accountMenuButton.contains(e.target)) {
                accountMenu.classList.add('hidden');
                accountMenuButton.setAttribute('aria-expanded', 'false');
            }
        });

        // Close menu on escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                accountMenu.classList.add('hidden');
                accountMenuButton.setAttribute('aria-expanded', 'false');
            }
        });
    }
}
</script>
