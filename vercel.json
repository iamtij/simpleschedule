{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "views/**",
                    "public/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/public/(.*)",
            "headers": {
                "cache-control": "public, max-age=31536000, immutable"
            },
            "dest": "/public/$1"
        },
        {
            "src": "/(css|js|images)/.*",
            "headers": {
                "cache-control": "public, max-age=31536000, immutable"
            }
        },
        {
            "src": "/.*",
            "dest": "index.js"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
} 