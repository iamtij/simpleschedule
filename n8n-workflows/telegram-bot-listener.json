            "x-n8n-webhook-secret": "={{ $env.N8N_WEBHOOK_SECRET }}"
          }
        },
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "command",
              "value": "get_bookings"
            },
            {
              "name": "chatId",
              "value": "={{ $json.message.chat.id }}"
            },
            {
              "name": "data",
              "value": "={{ { \"date\": $json.message.text.split(' ')[1] || new Date().toISOString().split('T')[0] } }}"
            }
          ]
