          },
          "conditions": [
            {
              "id": "start-command",
              "leftValue": "={{ $json.message.text }}",
              "rightValue": "/start",
              "operator": {
                "type": "string",
                "operation": "equals"
              }
            },
            {
              "id": "bookings-command",
              "leftValue": "={{ $json.message.text }}",
              "rightValue": "/bookings",
              "operator": {
                "type": "string",
                "operation": "equals"
              }
            },
